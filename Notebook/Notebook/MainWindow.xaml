<Window x:Class="Notebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome in Notebook!" Height="350" Width="700">
    <Grid>
        <TextBlock Height="100" Width="350" FontSize="20" Margin="100,110,242,110">
            Hello!<LineBreak />
            What would you like to do?<LineBreak />
            Please, choose option on the right.
        </TextBlock>

        <Canvas>
            <Button Name="logInBtn" Canvas.Right="100" Canvas.Top="90" FontSize="18" FontWeight="Bold" Width="100" Click="logInBtn_Click" Canvas.Left="492">LOG IN</Button>
            <Button Name="signUpBtn" Canvas.Right="100" Canvas.Top="150" FontSize="18" FontWeight="Bold" Width="100" Click="signUpBtn_Click" Canvas.Left="492">SIGN UP</Button>
            <Button Name="exitBtn" Canvas.Right="100" Canvas.Top="210" FontSize="18" FontWeight="Bold" Width="100" Click="exitBtn_Click" Canvas.Left="492">EXIT</Button>
        </Canvas>
    </Grid>
</Window>
